@model BookApp.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2 style="margin-top:90px;">Oturum Aç</h2>
                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                    {
                        <input type="email" name="Email" placeholder="Eposta.." />
                        <input type="password" name="Password" placeholder="Şifre.." />
                        <div asp-validation-summary="All" style="color:red; margin-left:-35px;"></div>
                        <button style=" float:left;" type="submit">Giriş Yap</button>
                        <p style="margin-top:40px; margin-left:175px; font-size:15px;">VEYA</p>
                        <a class="btn btn-primary" style="background-color: #73716d; float: right; margin-top:-40px; border-radius:0;" href="/User/SignUp">Kaydol</a>
                        
                     }
                </div><!--/login form-->
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <img style="height:350px; margin-left:200px; margin-top:50px;" src="https://abone.bisim.com.tr/img/010-padlock.svg" alt="" />
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->