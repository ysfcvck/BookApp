@model IEnumerable<BookApp.Models.Authentication.AppUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="module">
    <div style="color:red; margin-right:10px; text-align:right;">@TempData["ErrorMsg"]</div>
    <div class="module-head">
        <h3>Kullanıcı İşlemleri</h3>
        
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Ad/Soyad</th>
                    <th>Eposta</th>
                    <th>Telefon</th>
                    <th>Yetki Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                 <tr class="odd gradeX">
                    <td>@x.Id</td>
                    <td>@x.UserName</td>
                    <td>@x.NameSurname</td>
                    <td>@x.Email</td>
                    <td>@x.PhoneNumber</td>
                    <td><a asp-action="RoleAssign" asp-controller="Role" asp-route-id="@x.Id" class="btn btn-primary">Yetki</a></td>
                    <td>@Html.ActionLink("Sil", "DeleteUser", new { id = x.Id }, new { @class = "btn btn-danger", onclick = "return confirm('U Y A R I   |   Kayıt silinmek üzere..');" })</td>
                 </tr>
                }
            </tbody>
        </table>
    </div>
</div><!--/.module-->
