@model BookApp.Models.ViewModels.ContactViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- İLETİŞİM FORMU -->

<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-8" style="margin-top:50px;">
                <div class="contact-form">
                    <h2 class="title text-center">İLETİŞİM FORMU</h2>
                    <div class="status alert alert-success" style="display: none"></div>
                    @using (Html.BeginForm(new { @class = "contact-form row" }))
                    {
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(x => x.NameSurname, new { @placeholder = "Ad Soyad..", @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(x => x.Email, new { @placeholder = "Eposta..", @class = "form-control" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.Subject, new { @placeholder = "Konu..", @class = "form-control" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextAreaFor(x => x.Message, new { @placeholder = "Lütfen iletmek istediğiniz mesajı yazın..", @class = "form-control", @id = "message", @rows = "8" })
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" class="btn btn-primary pull-right" value="Gönder">
                            <div style="color:#fe980f">
                                @TempData["Message"]
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-4" style="margin-top:50px;">
                <div class="contact-info">
                    <h2 class="title text-center">İLETİŞİM BİLGİLERİ</h2>
                    <address>
                        <p>BookApp</p><br />
                        <p>Boğaziçi Üniversitesi Hisar Kampüsü Yönetim Bilişim Sistemleri Bölümü 34342</p>
                        <p>Bebek, İstanbul</p><br />
                        <p>Telefon: (0212) 359 72 87</p>
                        <p>Fax: (0212) 287 32 97</p>
                        <p>Email: bookapp34@gmail.com</p>
                    </address>
                </div>
            </div>
        </div>
    </div>
</div><!--/#contact-page-->