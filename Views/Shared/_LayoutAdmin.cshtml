
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link type="text/css" href="~/AdminPanel/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/AdminPanel/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/AdminPanel/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/AdminPanel/images/icons/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" href="#">Yönetici Paneli </a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">
                        <li><a href="/Default/Index">Sayfa Görünümü </a></li>
                        <li><a href="/User/Logout">Çıkış </a></li>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar">
                        <ul class="widget widget-menu unstyled">
                            <li><a href="/Order/UnShippedOrders"><i class="menu-icon icon-table"></i>Bekleyen Siparişler </a></li>
                            <li><a href="/Order/ShippedOrders"><i class="menu-icon icon-table"></i>Gönderilen Siparişler </a></li>
                        </ul>

                        <ul class="widget widget-menu unstyled">
                            <li><a href="/Book/Index"><i class="menu-icon icon-book"></i>Kitap Listesi </a></li>
                            <li><a href="/Category/Index"><i class="menu-icon icon-bar-chart"></i>Kategori Listesi </a></li>
                            <li><a href="/Genre/Index"><i class="menu-icon icon-bar-chart"></i>Tür Listesi </a></li>
                        </ul>

                        <ul class="widget widget-menu unstyled">
                            <li><a href="/Book/BookAdd"><i class="menu-icon icon-book"></i>Kitap Ekle </a></li>
                            <li><a href="/Category/CategoryAdd"><i class="menu-icon icon-bar-chart"></i>Kategori Ekle </a></li>
                            <li><a href="/Genre/GenreAdd"><i class="menu-icon icon-bar-chart"></i>Tür Ekle </a></li>
                        </ul>

                        <ul class="widget widget-menu unstyled">
                            <li><a href="/User/Index"><i class="menu-icon icon-table"></i>Kullanıcı İşlemleri </a></li>
                            <li><a href="/Role/Index"><i class="menu-icon icon-tasks"></i>Rol Listesi</a></li>
                            <li><a href="/Billboard/Index"><i class="menu-icon icon-paste"></i>Rekram Yönetimi </a></li>
                        </ul>

                        <ul class="widget widget-menu unstyled">
                            <li><a href="/Default/Index"><i class="menu-icon icon-paste"></i>Sayfa Görünümü </a></li>
                            <li><a href="/User/Logout"><i class="menu-icon icon-signout"></i>Çıkış </a></li>
                        </ul>
                    </div>
                    <!--/.sidebar-->
                </div>
                <div class="span9">
                    <div class="content">

                        @RenderBody()
                    </div>
                </div>
                <!--/.container-->
            </div>
        </div>
    </div>
    <!--/.wrapper-->
    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2021 BookApp - Admin Panel</b>Tüm hakları saklıdır.
        </div>
    </div>
    <script src="~/AdminPanel/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/AdminPanel/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/AdminPanel/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/AdminPanel/scripts/flot/jquery.flot.js" type="text/javascript"></script>
    <script src="~/AdminPanel/scripts/flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="~/AdminPanel/scripts/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/AdminPanel/scripts/common.js" type="text/javascript"></script>

</body>
</html>